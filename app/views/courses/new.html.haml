%h1 Create New Course

= form_for :course, url: courses_path do |f|
  - if @course.errors.any?
    #error_explination
      %h2
        = pluralize(@course.errors.count, "error")
        prohibited
        this course from being saved:
      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg

= form_tag courses_path do

  = label :course, :title, 'Course Name'
  = text_field :course, 'title'

  = label :course, :description, 'Course Description'
  = text_field :course, 'description'

  = submit_tag 'Create Course'

= link_to 'Back', courses_path

